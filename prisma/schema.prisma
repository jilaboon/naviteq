generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // For migrations
}

enum Role {
  ADMIN
  SALES
  RECRUITER
  CLIENT_MANAGER
}

enum ProjectCategory {
  PIPELINE
  DEVOPS
  DEVELOPERS
}

enum ProjectStatus {
  INITIAL
  SOURCING
  INTERVIEWS
  CLOSED_WON
  CLOSED_LOST
}

enum DevOpsStatus {
  ACTIVE
  AT_RISK
  BLOCKED
  COMPLETED
}

enum ProjectUpdateVisibility {
  INTERNAL
  CUSTOMER_FACING
}

enum ProjectPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum SeniorityLevel {
  JUNIOR
  MID
  SENIOR
  LEAD
}

enum RemotePolicy {
  ONSITE
  HYBRID
  REMOTE
}

enum CandidateStage {
  SHORTLISTED
  CONTACTED
  SUBMITTED_TO_CLIENT
  INTERVIEWING
  REJECTED
  HIRED
}

enum ActivityAction {
  CREATED
  UPDATED
  DELETED
  STAGE_CHANGED
  UPLOADED_RESUME
  ASSIGNED
  UNASSIGNED
  LOGIN
  CONVERTED
  UPDATE_ADDED
}

// New enums for Engineers feature
enum EmploymentStatus {
  ACTIVE
  BENCH
  ASSIGNED
  ON_LEAVE
  INACTIVE
}

enum AssignmentStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum TalentType {
  CANDIDATE
  ENGINEER
}

enum TalentStage {
  SHORTLISTED
  CONTACTED
  SUBMITTED_TO_CLIENT
  INTERVIEWING
  REJECTED
  HIRED      // Final positive for Candidates
  ASSIGNED   // Final positive for Engineers
}

enum UpdateVisibility {
  INTERNAL
  MANAGER_ONLY
}

model User {
  id            String    @id @default(cuid())
  fullName      String
  email         String    @unique
  passwordHash  String
  role          Role      @default(RECRUITER)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // Relations
  ownedCustomers      Customer[]           @relation("CustomerOwner")
  assignedProjects    ProjectAssignment[]
  projectCandidates   ProjectCandidate[]   @relation("RecruiterOwner")
  projectTalents      ProjectTalent[]      @relation("TalentOwner")
  activityLogs        ActivityLog[]
  engineerUpdates     EngineerUpdate[]     @relation("UpdateAuthor")
  projectUpdates      ProjectUpdate[]      @relation("ProjectUpdateAuthor")
  notifications       Notification[]       @relation("NotificationRecipient")
  mentionedIn         ProjectUpdate[]      @relation("ProjectUpdateMentions")

  @@map("users")
}

model Customer {
  id          String   @id @default(cuid())
  name        String
  industry    String?
  website     String?
  description String?
  contacts    Json     @default("[]") // Array of contact objects
  notes       String?
  tags        String[] @default([])
  ownerUserId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  owner               User?                @relation("CustomerOwner", fields: [ownerUserId], references: [id])
  projects            Project[]
  engineerAssignments EngineerAssignment[]

  @@map("customers")
}

model Project {
  id                    String          @id @default(cuid())
  customerId            String
  title                 String
  description           String?

  // Project Category (determines navigation grouping and behavior)
  projectCategory       ProjectCategory @default(PIPELINE)

  // Source project reference (for Pipeline â†’ DevOps transitions)
  sourcePipelineProjectId String?

  // Requirements (primarily for Pipeline projects)
  technologies          String[]        @default([])
  mustHave              String[]        @default([])
  niceToHave            String[]        @default([])
  seniorityLevel        SeniorityLevel?
  yearsExperienceMin    Int?
  location              String?
  remotePolicy          RemotePolicy?
  languageRequirements  String[]        @default([])

  headcount             Int?
  priority              ProjectPriority @default(MEDIUM)
  status                ProjectStatus   @default(INITIAL)      // For Pipeline projects
  devOpsStatus          DevOpsStatus?                          // For DevOps projects

  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt

  // Relations
  customer              Customer             @relation(fields: [customerId], references: [id], onDelete: Cascade)
  sourcePipelineProject Project?             @relation("ProjectTransition", fields: [sourcePipelineProjectId], references: [id])
  derivedProjects       Project[]            @relation("ProjectTransition")
  assignedUsers         ProjectAssignment[]
  projectCandidates     ProjectCandidate[]   // Legacy, keep for backward compatibility
  projectTalents        ProjectTalent[]      // New unified talent submissions
  engineerAssignments   EngineerAssignment[]
  updates               ProjectUpdate[]      // Timeline updates

  @@map("projects")
}

model ProjectAssignment {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_assignments")
}

model Candidate {
  id                String          @id @default(cuid())
  fullName          String
  email             String?
  phone             String?
  location          String?
  title             String?
  summaryPublic     String?
  summaryInternal   String?
  technologies      String[]        @default([])
  yearsExperience   Int?
  seniorityLevel    SeniorityLevel?
  languages         String[]        @default([])
  availability      String?
  salaryExpectation String?

  // Resume
  resumeFileUrl       String?
  resumeOriginalName  String?
  resumeUploadedAt    DateTime?
  resumeExtractedText String?

  // Interview notes stored as JSON array
  interviewNotes    Json            @default("[]")

  tags              String[]        @default([])
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  projectCandidates ProjectCandidate[]  // Legacy
  projectTalents    ProjectTalent[]     // New
  linkedEngineer    Engineer?           // If converted to engineer

  @@map("candidates")
}

// Legacy table - kept for backward compatibility
model ProjectCandidate {
  id                  String         @id @default(cuid())
  projectId           String
  candidateId         String
  stage               CandidateStage @default(SHORTLISTED)
  matchScore          Int?
  matchReasons        Json?          // Array of strings
  recruiterOwnerUserId String?
  submittedAt         DateTime?
  lastStageChangeAt   DateTime?
  notes               String?
  clientFeedback      String?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  // Relations
  project        Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  candidate      Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  recruiterOwner User?     @relation("RecruiterOwner", fields: [recruiterOwnerUserId], references: [id])

  @@unique([projectId, candidateId])
  @@map("project_candidates")
}

// ============================================
// NEW: Engineer (Internal Employee) Entity
// ============================================
model Engineer {
  id                  String           @id @default(cuid())
  linkedCandidateId   String?          @unique  // If converted from candidate
  fullName            String
  email               String?
  phone               String?
  location            String?
  title               String?
  technologies        String[]         @default([])
  yearsExperience     Int?
  seniorityLevel      SeniorityLevel?
  employmentStatus    EmploymentStatus @default(ACTIVE)
  employmentStartDate DateTime?
  managerEngineerId   String?          // For future team-lead permissions
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  // Relations
  linkedCandidate     Candidate?         @relation(fields: [linkedCandidateId], references: [id])
  manager             Engineer?          @relation("EngineerManager", fields: [managerEngineerId], references: [id])
  directReports       Engineer[]         @relation("EngineerManager")
  assignments         EngineerAssignment[]
  updates             EngineerUpdate[]
  projectTalents      ProjectTalent[]

  @@map("engineers")
}

// ============================================
// NEW: Engineer Assignment (Work History)
// ============================================
model EngineerAssignment {
  id          String           @id @default(cuid())
  engineerId  String
  projectId   String?
  customerId  String?
  roleTitle   String?
  startDate   DateTime
  endDate     DateTime?
  status      AssignmentStatus @default(ACTIVE)
  notes       String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  engineer Engineer  @relation(fields: [engineerId], references: [id], onDelete: Cascade)
  project  Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  customer Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)

  @@map("engineer_assignments")
}

// ============================================
// NEW: Engineer Updates (Internal Status Feed)
// ============================================
model EngineerUpdate {
  id           String           @id @default(cuid())
  engineerId   String
  authorUserId String
  content      String
  visibility   UpdateVisibility @default(INTERNAL)
  createdAt    DateTime         @default(now())

  // Relations
  engineer Engineer @relation(fields: [engineerId], references: [id], onDelete: Cascade)
  author   User     @relation("UpdateAuthor", fields: [authorUserId], references: [id])

  @@map("engineer_updates")
}

// ============================================
// NEW: Project Talent (Unified Submissions)
// ============================================
model ProjectTalent {
  id                String       @id @default(cuid())
  projectId         String
  talentType        TalentType
  candidateId       String?
  engineerId        String?
  stage             TalentStage  @default(SHORTLISTED)
  matchScore        Int?
  matchReasons      Json?        // Array of strings
  ownerUserId       String?
  submittedAt       DateTime?
  lastStageChangeAt DateTime?
  notes             String?
  clientFeedback    String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  // Relations
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  candidate Candidate? @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  engineer  Engineer?  @relation(fields: [engineerId], references: [id], onDelete: Cascade)
  owner     User?      @relation("TalentOwner", fields: [ownerUserId], references: [id])

  // Ensure exactly one talent reference
  @@unique([projectId, candidateId])
  @@unique([projectId, engineerId])
  @@map("project_talents")
}

model ActivityLog {
  id              String         @id @default(cuid())
  entityType      String         // Customer, Project, Candidate, Engineer, ProjectTalent, User
  entityId        String
  action          ActivityAction
  performedByUserId String?
  diff            Json?
  createdAt       DateTime       @default(now())

  // Relations
  performedBy User? @relation(fields: [performedByUserId], references: [id])

  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("activity_logs")
}

// ============================================
// Project Updates (Timeline/Feed)
// ============================================
model ProjectUpdate {
  id           String                   @id @default(cuid())
  projectId    String
  authorUserId String
  content      String
  visibility   ProjectUpdateVisibility  @default(INTERNAL)
  tags         String[]                 @default([])
  createdAt    DateTime                 @default(now())
  updatedAt    DateTime                 @updatedAt

  // Relations
  project       Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  author        User           @relation("ProjectUpdateAuthor", fields: [authorUserId], references: [id])
  mentionedUsers User[]        @relation("ProjectUpdateMentions")
  notifications Notification[]

  @@index([projectId])
  @@index([createdAt])
  @@map("project_updates")
}

// ============================================
// Notifications (for mentions)
// ============================================
model Notification {
  id                String    @id @default(cuid())
  userId            String
  type              String    // MENTION, STATUS_CHANGE, etc.
  title             String
  message           String
  linkUrl           String?
  projectUpdateId   String?
  isRead            Boolean   @default(false)
  createdAt         DateTime  @default(now())

  // Relations
  user          User           @relation("NotificationRecipient", fields: [userId], references: [id], onDelete: Cascade)
  projectUpdate ProjectUpdate? @relation(fields: [projectUpdateId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("notifications")
}
